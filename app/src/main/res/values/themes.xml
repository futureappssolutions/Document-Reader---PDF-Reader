<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/app_color</item>
        <item name="colorPrimary">@color/app_color</item>
        <item name="colorPrimaryDark">@color/color_light</item>
        <item name="android:statusBarColor">@color/color_light</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="ToolbarDarkTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="ToolbarTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="ActionImageView">
        <item name="android:layout_width">40.0dip</item>
        <item name="android:layout_height">40.0dip</item>
        <item name="android:contentDescription">@null</item>
    </style>

    <style name="ActionItem">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/font_regular</item>
    </style>

    <style name="NumberInPasscode">
        <item name="android:textSize">24.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/layout_selector_tran</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">54.0dip</item>
        <item name="android:layout_height">54.0dip</item>
    </style>

    <style name="title_background_drawable_vertical">
        <item name="android:background">@drawable/sys_title_bg_vertical</item>
    </style>

    <style name="title_background_drawable_horizontal">
        <item name="android:background">@drawable/sys_title_bg_horizontal</item>
    </style>

    <style name="title_background_vertical" parent="android:Theme">
        <item name="android:windowTitleBackgroundStyle">@style/title_background_drawable_vertical
        </item>
    </style>

    <style name="title_background_horizontal" parent="android:Theme">
        <item name="android:windowTitleBackgroundStyle">
            @style/title_background_drawable_horizontal
        </item>
    </style>

    <style name="ResumeThem" parent="@style/Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorAccent">@color/app_color</item>
        <item name="colorPrimary">@color/app_color</item>
        <item name="colorPrimaryDark">@color/app_color</item>
        <item name="android:statusBarColor">@color/app_color</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>
</resources>