    </LinearLayout>

    <LinearLayout
        android:id="@+id/favoriteFileList"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:weightSum="2"
        android:layout_marginStart="@dimen/_17sdp"
        android:layout_marginTop="@dimen/_18sdp"
        android:layout_marginEnd="@dimen/_17sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/fav_background">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/la_empty"
            android:layout_width="50dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/raw_fav" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_medium"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:singleLine="true"
                android:text="@string/favoriteFile"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_regular"
                android:maxLines="2"
                android:paddingStart="@dimen/_5sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:text="All Favourite File List Are Here.."
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />
